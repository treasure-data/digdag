
+exports:
  _export:
    v: simple_export

  +simple_export:
    sh>: echo ${v} > simple_export.out

  +export_overwrite:
    _export:
      v: export_overwrite
    sh>: echo ${v} > export_overwrite.out

+stores:
  +store:
    py>: helper.store_v
    python: python3
    value: simple_store

  +simple_store:
    sh>: echo ${v} > simple_store.out

  +overwrite:
    py>: helper.store_v
    python: python3
    value: store_overwrite

  +store_overwrite:
    sh>: echo ${v} > store_overwrite.out

+parallel_store_fork:
  +prepare:
    py>: helper.store_v
    python: python3
    value: prepare

  +fork:
    _parallel: true

    +a:
      +store:
        py>: helper.store_v
        python: python3
        value: a

      +dump:
        sh>: echo ${v} > parallel_store_fork_a.out

    +b:
      +store:
        py>: helper.store_v
        python: python3
        value: b

      +dump:
        sh>: echo ${v} > parallel_store_fork_b.out

    +c:
      sh>: echo ${v} > parallel_store_fork_c.out

  +join:
    sh>: echo ${v} > parallel_store_fork_join.out

+dag_store_join:
  +store:
    _parallel: true

    +a:
      py>: helper.store_v
      python: python3
      value: a

    +b:
      py>: helper.store_v
      python: python3
      value: b
      _after: [+a]

    +c:
      py>: helper.store_v
      python: python3
      value: c

  +dump:
    sh>: echo ${v} > dag_store_join.out

